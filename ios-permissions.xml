<!-- iOS Permissions Configuration -->
<!-- Add these to ios/App/App/Info.plist -->

<key>NSCameraUsageDescription</key>
<string>This app needs access to your camera to capture photos of your clothing items for your digital closet.</string>

<key>NSPhotoLibraryUsageDescription</key>
<string>This app needs access to your photo library to select and import clothing images to your digital closet.</string>

<key>NSPhotoLibraryAddUsageDescription</key>
<string>This app would like to save processed clothing images to your photo library.</string>

<!-- App Transport Security -->
<key>NSAppTransportSecurity</key>
<dict>
    <key>NSAllowsArbitraryLoads</key>
    <true/>
</dict>

<!-- Support for various device orientations -->
<key>UISupportedInterfaceOrientations</key>
<array>
    <string>UIInterfaceOrientationPortrait</string>
    <string>UIInterfaceOrientationPortraitUpsideDown</string>
</array>

<!-- Status bar configuration -->
<key>UIStatusBarHidden</key>
<false/>
<key>UIViewControllerBasedStatusBarAppearance</key>
<false/>